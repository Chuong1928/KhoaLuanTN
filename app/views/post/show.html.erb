

                        <!-- end page title -->

                        <div class="row">
                            <div class="col-lg-1 position-relative text-center py-5" style="">
                               <div class="post-action">
                                    <div class="text-center d-none avatar-user">
                                        <img src="<%= @post.user.avatar.url %>" alt="" class="avatar-sm rounded-circle text-center">
                                    </div>
                                    <div class="d-block">
                                        <a href="#" ><i class="bx bx-caret-up fs-40px" data-toggle="tooltip" data-original-title="Upvote"></i></a>
                                        <h2> <%= @post.vote_point %></h2>
                                        <a href="#" ><i class="bx bx-caret-down fs-40px" data-toggle="tooltip" data-original-title="Downvote"></i></a>
                                    </div>
                               </div>
                            </div>
                            <div class="col-lg-8 " id="post-content">
                                <div class="card post-body" data-post-id = "<%=  @post.id %>">
                                    <div class="card-body">
                                        <div class="media">
                                            <img src="<%= @post.user.avatar.url %>" alt="" class="avatar-sm mr-4 rounded-circle">

                                            <div class="media-body overflow-hidden">
                                                <h5 class="text-truncate font-size-15"><%= @post.user.nickname %></h5>
                                                <p class="text-muted"><%= @post.user.name %></p>
                                            </div>
                                            <div class= "post-infor">
                                                 <div>
                                                    <p class="mb-0 d-inline-block"><%= time_ago_in_words(@post.created_at) %></p>
                                                    <span class="mx-3">-</span>
                                                    <span class="read-time" data-read-time="<%= @post.readtime %>">Khoảng <%= @post.readtime %> phút đọc</span>
                                                 </div>
                                                <ul class="list-inline float-sm-left text-right my-1 w-100">
                                                        <li class="list-inline-item">
                                                            <i class="mdi mdi-eye-outline " data-toggle="tooltip" data-original-title="Views" 
                                                            aria-describedby="tooltip323106"></i> <%= @post.views %>
                                                        
                                                        </li>
                                                        <li class="list-inline-item">
                                                            <i class="mdi mdi-comment-text-multiple " data-toggle="tooltip" data-original-title="Comments" 
                                                            aria-describedby="tooltip323106"></i> <%= @post.comments.count %>
                                                        </li>
                                                </ul>
                                            </div>
                                        
                                            
                                        </div>

                                        <h1 class="my-4"><%= @post.title %></h1>
                                        <div class="d-flex justify-content-between">
                                            <div class="list-tag">
                                                <% @post.tags.each do |tag| %>
                                                    <a href="#" class="badge badge-soft-primary font-size-11 m-1 p-2"><%= tag.name %></a>
                                                <% end %>
                                            </div>
                                            <div class="post-option">
                                                 <div class="dropdown">
                                                    <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="mdi mdi-dots-horizontal font-size-20" data-toggle="tooltip" data-original-title="Show action"></i>
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-right">
                                                        <li><a href="#" class="dropdown-item "><i class="mdi mdi-flag font-size-16 text-danger mr-1"></i> Báo cáo bài viết</a></li>
                                                        <li><a href="#" class="dropdown-item "><i class="mdi mdi-bookmark-plus font-size-16 text-success  mr-1"></i> Thêm vào danh sách yêu thích</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                    </div>
                                        <p><%= @post.body.html_safe %></p>
                                        <div class="row task-dates">
                                            <div class="col-sm-4 col-6">
                                                <div class="mt-4">
                                                    <h5 class="font-size-14"><i class="bx bx-calendar mr-1 text-primary"></i> Start Date</h5>
                                                    <p class="text-muted mb-0">08 Sept, 2019</p>
                                                </div>
                                            </div>
    
                                            <div class="col-sm-4 col-6">
                                                <div class="mt-4">
                                                    <h5 class="font-size-14"><i class="bx bx-calendar-check mr-1 text-primary"></i> Due Date</h5>
                                                    <p class="text-muted mb-0">12 Oct, 2019</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end col -->

                            <div class="col-lg-3" id="">

                                        <h3 class=" mb-3 read-more">Xem thêm từ <%= @post.user.nickname %> </h3>
                                        <% @post.user.posts.order(created_at: :DESC).limit(5).each do |post| %>
                                        
                                            <div class="card border-bottom shadow-sm py-1 mb-2">
                                                <div class="card-body">
                                                <a href="<%= post_path(post) %>" class="text-dark text-capitalize">
                                                    <h4 class="card-title"><%= post.title %></h4>
                                                </a>
                                                <p class="card-text"><%= post.summary %></p>
                                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                                </div>
                                            </div>
                                       <% end %>

                            </div>
                            <!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="row" id="comment-and-hotpost">
                            <div class="col-lg-8">
                                <div class="card">
                                    <div class="card-body">
                                          
                                            <h4 class="card-title mb-4">Comments</h4>
                                            <% if user_signed_in? %>
                                                <%= render partial: "comment" %>
                                            <% else %>
                                                <div class="border shadow-sm">
                                                    
                                                        <a href="<%= user_session_path %>">
                                                            <div class="card-body text-center">
                                                                <div class="p-5"> <i class="fas fa-comment-slash"></i> Đăng nhập để Comment </div>
                                                            </div>
                                                        </a>
                                                   
                                                </div>
                                            <% end %>
                                            
                                          <div id="list-comment">
                                                    <%= render partial: "comments/list_comments" %>
                                          </div>                          
                                    </div>
                                   
                                </div>
                            </div>
                   
                            <!-- end col -->

                            
                            <!-- end col -->

                
                            <!-- end col -->
                        </div>
                        <!-- end row -->

            