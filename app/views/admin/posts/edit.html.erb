
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Cập nhật bài viết</h4>
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Bài viết của bạn</h4>
                                            <%= form_for [:admin, @post], url: {action: "update"}, html: {class: "outer-repeater"} do |f| %>
                                            <div  class="outer">
                                                <div  class="outer">
                                                    <div class="form-group row mb-4">
                                                        <label for="taskname" class="col-form-label col-lg-2">Tiêu đề</label>
                                                        <div class="col-lg-10">
                                                            <%= f.text_field :title ,placeholder: 'Tiêu đề bài viết là gì ...' ,class: 'form-control title_post'  %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label class="col-form-label col-lg-2">Nội dung</label>
                                                        <div class="col-lg-10">
                                                            <%= f.text_area :body, class: "summernote" %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4 d-none">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Đường dẫn hiển thị</label>
                                                        <div class="col-lg-10">
                                                             <%= f.text_field :peralink ,placeholder: 'tieu-de-bai-viet' ,class: 'form-control peralink_post'  %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4 d-none">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Đường dẫn hiển thị</label>
                                                        <div class="col-lg-10">
                                                             <%= f.text_field :slug ,placeholder: 'tieu-de-bai-viet' ,class: 'form-control peralink_post'  %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Trạng thái hiển thị</label>
                                                        <div class="col-lg-10">
                                                       <%= f.select :visible, options_for_select([['Công khai', true], ['Riêng tư', false]], f.object.visible), {},class: 'custom-select' %>
        
                                                        </div>
                                                  
                                                      </div>
                                                </div>
                                            </div>
                                             <div class="row justify-content-end">
                                                <div class="col-lg-10">
                                                    <button type="submit" class="btn btn-primary save-post">Cập nhật</button>
                                                     <%= link_to "Hủy", admin_posts_path , class: "btn btn-secondary" %>
                                                    
                                                </div>
                                            </div>
                                        
                                            <% end %>                                          
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->