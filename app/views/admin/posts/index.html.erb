
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Bài Viết (<%=@posts.count %>)</h4>

                                    <div class="page-title-right">
                                      <a href=" <%= new_admin_post_path %> " class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2"><i class="mdi mdi-plus mr-1"></i>Thêm bài viết mới</a>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->
                    
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                            <thead>
                                            <tr>
                                                <th>Tiêu đề</th>
                                                <th>Trang thái</th>
                                                <th>Tác giả</th>
                                                <th>Ngay tạo</th>
                                                <th>Ngay cập nhật</th>
                                                <th>Lượt xem</th>
                                                <th>Hành động</th>
                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                            <% @posts.each do |post|  %>
                                                <tr>
                                                    <td><%= post.title %></td>
                                                    <td><% if post.visible == true  %>
                                                            <%= "Công khai" %>
                                                         <% else %>
                                                            <%= "Riêng tư" %>
                                                         <% end %></td>
                                                    <td><%=  post.id %></td>
                                                    <td><%=  post.created_at.try(:strftime, "%d-%m-%Y   %T") %></td>
                                                    <td><%= post.updated_at.try(:strftime, "%d-%m-%Y  %T") %></td>
                                                    <td><%= post.views %></td>
                                                    <td class="d-flex">
                                                        <a href="<%=edit_admin_post_path(post) %>" class="mr-3 text-primary" data-toggle="tooltip"  data-original-title="Edit"><i class="mdi mdi-pencil font-size-18"></i></a>
                                                        <a href="/admin/posts/<%= post.id%>"     class="mr-3 text-primary" data-toggle="tooltip" data-original-title="Review"><i class="mdi mdi-monitor-eye font-size-18"></i></a>
                                                        <%= button_to admin_post_path(post), method: :delete, data: { "toggle" => "tooltip","original-title" => "Delete" }, class: "text-danger delete mr-3 btn btn-link p-0"  do %>
                                                            <i class="mdi mdi-close font-size-18"></i>
                                                        <% end %>
                                                    </td>       
                                                </tr>
                                            <% end %>
                                            
                                            </tbody>
                                        </table>
        
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->
            