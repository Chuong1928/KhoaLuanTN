<% @comments.each do |comment|  %>
<tr>
    <td><%= comment.post.title %></td>
    <td><%=  comment.user.nickname %></td>
    <td><%= comment.body %></td>
    <td><%= comment.like %></td>
    <td><%= comment.created_at.try(:strftime, "%d-%m-%Y   %T") %></td>
    <td class="d-flex">
        <a href="<%=edit_admin_comment_path(comment) %>" class="mr-3 text-primary"
            data-toggle="tooltip" data-original-title="Edit"><i
                class="mdi mdi-pencil font-size-18"></i></a>
        <%= button_to admin_comment_path(comment), method: :delete, data: { "toggle" => "tooltip","original-title" => "Delete" }, :onclick => "return confirm('Bạn có muốn xóa không ?')", class: "text-danger delete mr-3 btn btn-link p-0"  do %>
        <i class="mdi mdi-close font-size-18"></i>
        <% end %>
    </td>
</tr>
<% end %>
