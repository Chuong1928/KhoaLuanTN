<div class="row">
    <div class="col-12 col-lg-9">
        <!-- post item here -->
        <% @all_posts.each do |post| %>

        <div class="post-item shadow">
            <div class="item-head d-flex align-item-center">
                <div class="author-avatar bg-white p-1 rounded">
                    <img src="/admin/assets/images/users/avatar-1.jpg" class="img-fluid">
                </div>
                <div class="post-meta ml-2 flex-grow-1 py-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div>
                                <h4 class="d-inline">
                                    <a href="<%= post_path(post) %>" class="text-dark text-capitalize">
                                        <%= post.title %>
                                    </a>
                                </h4>
                                <span class="mx-3">-</span>
                                <span>12 phút đọc</span>
                            </div>
                            <div class="author-info">
                                <p class="mb-0"><%= post.user.name %></p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <% end %>



        <div class="row">
            <div class="col-lg-12">
                <div class="">
                    <div class="table-responsive">
                        <table class="table project-list-table table-nowrap table-centered table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col" style="width: 100px">#</th>
                                    <th scope="col">Tiêu đề</th>
                                    <th scope="col">Ngày đăng</th>
                                    <th scope="col">Lượt xem</th>
                                    <th scope="col">Tác giả</th>   
                                </tr>
                            </thead>
                            <tbody>
                            <% @all_posts.each do |post| %>
                                    <tr>
                                    <td><img src="/admin/assets/images/companies/img-3.png" alt="" class="avatar-sm"></td>
                                    <td>
                                        <h5 class="text-truncate font-size-14"><a href="<%= post_path(post) %>" class="text-dark"><%= post.title %></a></h5>
                                        <p class="text-muted mb-0"><%= post.body %></p>
                                    </td>
                                    <td><%=  post.created_at.try(:strftime, "%d-%m-%Y   %T") %></td>
                                    <td><%= post.views %></span></td>
                                    <td>
                                        <div class="team">
                                            <a href="javascript: void(0);" class="team-member d-inline-block" data-toggle="tooltip" data-placement="top" title="" data-original-title="Daniel Canales">
                                                <img src="/admin/assets/images/users/avatar-3.jpg" class="rounded-circle avatar-xs m-1" alt="">
                                            </a>
                                            <%= Post.find(post.id).user.name %>
                                        </div>
                                    </td>
                                </tr>
                            <% end %>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-3"></div>

</div>


<!-- end row -->

<%= render partial: 'categories/list' %>

                  